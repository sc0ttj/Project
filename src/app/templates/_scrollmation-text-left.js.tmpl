<script id="scrollmation-text-left-js" type="text/javascript">
  // console.log(app.cutsTheMustard());

  var scrollmationStartTags = $('.scrollmation-start');
  var scrollmationTextTags = $('.scrollmation-text');
  var scrollmationEndTags = $('.scrollmation-end');

  var startWatchers = scrollmationStartTags.each(function addWatchers(el){
    var $el = $(el);
    var watcher = scrollMonitor.create(el);
    var $container = $(el.parentNode);

    watcher.enterViewport(function() {
      $container.css('background-position', 'top');
      $container.addClass('scrollmation-container-background-image');
      $container.removeClass('scrollmation-mobilefix');
    });

  });

  var textWatchers = scrollmationTextTags.each(function addWatchers(el){
    var $el = $(el);
    var watcher = scrollMonitor.create(el);
    var $container = $(el.parentNode);

    watcher.fullyEnterViewport(function(){
      $container.removeClass('scrollmation-container-background-image');
      $container.addClass('scrollmation-mobilefix');
    });

  });

  var endWatchers = scrollmationEndTags.each(function addWatchers(el){
    var $el = $(el);
    var watcher = scrollMonitor.create(el);
    var $container = $(el.parentNode);

    watcher.enterViewport(function(){
      $container.css('background-position', 'bottom');
      $container.addClass('scrollmation-container-background-image');
      $container.removeClass('scrollmation-mobilefix');
    });

  });

</script>